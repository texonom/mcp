{
  "name": "mcp",
  "version": "0.1.0",
  "description": "Texonom's Model Context Protocol server interface for AI retrieval",
  "private": true,
  "type": "module",
  "bin": {
    "mcp": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "lint": "eslint --cache \"**/*.{ts,tsx}\" --fix --ignore-path .gitignore",
    "format": "prettier --cache \"**/*.{js,json,md,css,js,ts,tsx}\" --write --ignore-path .gitignore"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.7.0",
    "@texonom/cli": "^1.4.2",
    "@texonom/nclient": "^1.4.2",
    "@texonom/nutils": "^1.4.2"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.26.5",
    "@texonom/ntypes": "^1.4.2",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "prettier": "^3.4.2",
    "typescript": "^5.3.3",
    "vitest": "^2.1.8"
  }
}
